#:kivy 1.10.0
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:include view/screens/main.kv
#:include view/screens/error.kv
#:include view/screens/dev.kv
#:include view/screens/raw-data.kv
#:include view/screens/settings.kv
#:include view/screens/splash.kv
#:include view/screens/user_profiles.kv


#Fixed Navigation Bar
<Static@Image>:
    color:[.31,.31,.31,1]
    size_hint: .1, .1
<NavigationBar>:
    anchor_x: 'center'
    anchor_y: 'top'
    FloatLayout:
        canvas.before:
            Color:
                rgba: (.19,.19,.19,1)
            Rectangle:
                pos: self.pos
                size: self.size
        Static:
            source: './static/icons/park.png'
            #color: [.2,.82, .92, 1] if app.test['gpio'] == 1 else [.31,.31,.31,1]
            color: [.31,.31,.31,1]
            pos_hint:{'x':0, 'top': 1}
        Static:
            source: './static/icons/reverse.png'
            #color: [.99, .96, .36, 1] if app.test['gpio'] == 1 else [.31,.31,.31,1]
            color: [.31,.31,.31,1]
            pos_hint:{'x':0.04, 'top': 1}
        Static:
            source: './static/icons/drive.png'
            pos_hint:{'x':0.08, 'top': 1}
            #color: [.99, .96, .36, 1] if app.test['gpio'] == 1 else [.31,.31,.31,1]
            color: [.31,.31,.31,1]
        Static:
            source: './static/icons/cruise.png'
            pos_hint:{'x':0.16, 'top': 1}
            color: [.99, .96, .36, 1] if app.list['gpio12'] == 1 else [.31,.31,.31,1]
        Static:
            source: './static/icons/bps.png'
            pos_hint:{'x':0.23, 'top': 1}
            #color:[.94, .38, .31, 1]
            color: [.31,.31,.31,1]
        Label:
            text: str(root.time)
            font_name: "SourceSansPro"
            pos_hint:{'center_x':0.5, 'top': 1}
            size_hint: .1, .1
            font_size: '24pt'
        Static:
            source: './static/icons/headlights.png'
            color: [0, .23, .73, 1]
            pos_hint:{'x':0.65, 'top': 1}
            color: [.31,.31,.31,1]
        Static:
            source: './static/icons/left_signal_small.png'
            pos_hint:{'x':0.74, 'top': 1}
            color: [.99, .96, .36, 1] if app.list['gpio6'] == 1 else [.31,.31,.31,1]
        Static:
            source: './static/icons/right_signal_small.png'
            color:[.93, .73, .43, 1]
            pos_hint:{'x':0.77, 'top': 1}
            color: [.99, .96, .36, 1] if app.list['gpio5'] == 1 else [.31,.31,.31,1]

        Button:
            id: generate_btn
            size_hint: .1, .1
            background_color: 0,0,0,0
            pos_hint:{'x':.9, 'top': 1}
            canvas.before:
                Color:
                    rgba: (.19,.19,.19,1) if self.state=='normal' else (0,.7,.7,1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            selected: False
            on_release:
                root.update_screen(app.root.ids.screen_management.current)
            Image:
                size: generate_btn.size
                source: './static/icons/close.png' if self.parent.selected else './static/icons/menu.png'
                pos: generate_btn.pos

    AnchorLayout:
        anchor_x:'center'
        anchor_y: 'bottom'
        ScreenManagement:
            id: screen_management
            size_hint: 1, .90
            canvas.before:
                Color:
                    rgb: [.19,.19,.19,1]
                Rectangle:
                    pos: self.pos
                    size: self.size

#Create a manager for screens - Main, Dev, Error, RawData, and Settings
<ScreenManagement>:
    main_screen: main_screen
    error_screen: error_screen
    dev_screen: dev_screen
    raw_data_screen: raw_data_screen
    settings_screen: settings_screen
    splash_screen: splash_screen
    user_profile: user_profile
    size_hint: 1, .90
    canvas.before:
        Color:
            rgb: [.19,.19,.19,1]
        Rectangle:
            pos: self.pos
            size: self.size
    id: screen_management
    SplashScreen:
        id: splash_screen
        name: "splash_screen_name"
        manager: screen_management
    MainScreen:
        id: main_screen
        name: "main_screen_name"
        manager: screen_management
    ErrorScreen:
        id: error_screen
        name: "error_screen_name"
        manager: screen_management
    DevScreen:
        id: dev_screen
        name: "dev_screen_name"
    RawDataScreen:
        id: raw_data_screen
        name: "raw_data_screen_name"
    SettingsScreen:
        id: settings_screen
        name: "settings_screen_name"
    UserProfile:
        id: user_profile
        name: "user_profile_screen_name"
