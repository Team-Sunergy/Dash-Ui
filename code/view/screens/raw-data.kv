<Row@BoxLayout>:
    canvas.before:
        Color:
            rgba: (0.2, 0.2, 0.2, 1)
    value: ''
    key: ''
    Label:
        markup: True
        text: str("[color=39a07c]" + root.key + "[/color] : " + root.value)
        text_size: self.width, None
        size_hint: 1, None
        font_size: 35
        font_name: 'Inconsolata'


<RawDataScreen>:
    BoxLayout:
        canvas:
            Color:
                rgba: .19,.19,.19, 1
            Rectangle:
                size: self.size
                pos: self.pos
        rv: rv
        orientation: 'vertical'
        RecycleView:
            id: rv
            scroll_type: ['bars', 'content']
            scroll_wheel_distance: dp(114)
            bar_width: dp(5)
            viewclass: 'Row'
            RecycleGridLayout:
                cols: 3
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'