<MainValueMedium@Label>:
    text_size: root.width, None
    size: self.texture_size
    size_hint: 1, None
    halign: 'left'
    color: [.8,.8,.8,1]
    font_size: '28pt'
    font_name: "SourceSansPro"

<MainDescriptionMedium@Label>:
    text_size: root.width, None
    size: self.texture_size
    size_hint: 1, None
    halign: 'left'
    color: [.42,.42,.42, 1]
    font_name: 'Inconsolata'
    bold: True
    font_size: '16pt'

<MainScreen>:

    BoxLayout:
        pos_hint:{'right': 1, "top": 1}
        padding: [0,0,35,0]
        size_hint:(0.3, 0.2)
        orientation: 'vertical'
        MainValueMedium:
            text: '-- mi'
            halign: 'right'
        MainDescriptionMedium:
            text: 'EST. Range'
            halign: 'right'
    BoxLayout:
        size_hint: 1, .25
        orientation: 'vertical'
        pos_hint:{'center_x':0.5}
        MainValueMedium:
            text: str(root.list['netPower']) + ' W'
            font_size: '46pt'
            color: [1,1,1,1]
            halign: 'center'
        MainDescriptionMedium:
            text:'NET POWER'
            color: [1,1,1,1]
            font_size: '16pt'
            halign: 'center'
    Label:
        text:'+20 w'
        font_size: '46pt'
        color: [1,1,1,1]
        halign: 'center'
    BoxLayout:
        size_hint:(0.8, 0.2)
        pos_hint:{'left': 1, 'top': .7}
        orientation: 'vertical'
        padding: [35,0,0,0]
        MainValueMedium:
            text: str(root.list['highestCellTemperature']) + ' Â°C'
        MainDescriptionMedium:
            text: 'HI-CELL TEMP'
        MainValueMedium:
            text: str(root.list['mpptTotalNetPower']) + " W"
        MainDescriptionMedium:
            text: 'ARRAY POWER'
        MainValueMedium:
            text: str(root.list['batteryPackInstantaneousVoltage'])+ ' v'
            color: [1,1,1,1]
            font_size: '35pt'
        MainDescriptionMedium:
            text: 'BATTERY VOLT.'
            color: [1,1,1,1]

    Image:
        source: './static/icons/battery.png'
        x: self.parent.width * .95 - self.width * .5
        y: self.parent.height * .65 - self.height * .5
        color: root.soc
    Label:
        text: str(root.list['soc'])
        x: self.parent.width * .95 - self.width * .5
        y: self.parent.height * .52 - self.height * .5
        color: [1,1,1,1]
